{
  "compilerOptions": {

    "target": "es2016",                   
    "experimentalDecorators": true,                    
    "emitDecoratorMetadata": true,
    "module": "commonjs",                   
    "baseUrl": "./src",                                  
    "paths": {
      "!shared/*": ["app/shared/*"],
      "!modules/*": ["app/modules/*"],
      "!domain/*": ["domain/*"],
      "!infra/*": ["infra/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                            
  }
}
